<div class="signupPage">
    <div class="card">
        <div class="card-body">
            <form action="/signup" method="POST" name="register-form">
                <h2 class="mb-3">Register</h2>
                <div class="input-box">
                    <input name="username" type="text" placeholder="Username">
                    <p style="color: red; font-style:italic">{{errors.error_username}}</p>
                </div>
                <div class="input-box">
                    <input name="password" type="password" placeholder="Password">
                    <p style="color: red; font-style:italic">{{errors.error_password}}</p>
                </div>
                <button type="button" id="btnSubmit" data-toggle="modal" data-target="#myModal" class="my-2">
                    <h2>Submit</h2>
                </button>
                <a href="/login">
                    <p>Go to Login</p>
                </a>
            </form>
        </div>
    </div>
</div>
{{#if errors.resutt}}
<div class="modal" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="display: flex;flex-direction: row;">
            <div class="modal-header">
                {{!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> --}}
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{errors.resutt}}
            </div>
            {{!-- <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div> --}}
        </div>
    </div>
</div>
{{/if}}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $('#myModal').modal('show');
        let registerForm = document.forms['register-form']
        $("#btnSubmit").click(function (e) {
            e.preventDefault()
            registerForm.submit()
        })

        if ('{{errors.resutt}}' !== '') {
            if (performance.navigation.type === 1) {
                window.location.href = '/signup';
            }
        }
    })
</script>